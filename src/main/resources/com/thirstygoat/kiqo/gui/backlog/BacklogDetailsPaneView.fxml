<?xml version="1.0" encoding="UTF-8"?>

<?import com.thirstygoat.kiqo.gui.nodes.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.SegmentedButton?>
<VBox xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="713.0" prefWidth="728.0"
            xmlns="http://javafx.com/javafx/8" fx:controller="com.thirstygoat.kiqo.gui.backlog.BacklogDetailsPaneView">
    <children>
        <HBox fx:id="buttonsHBox" alignment="CENTER_RIGHT">
            <children>
                <HBox fillHeight="false" alignment="CENTER_LEFT" spacing="5" >
                    <children>
                        <GoatLabelTextField fx:id="shortNameLabel" styleClass="pane-short-name" />
                        <GoatLabelTextField fx:id="longNameLabel" styleClass="pane-long-name" />
                        <!--<Region maxWidth="-1" HBox.hgrow="ALWAYS" />-->
                        <!--<Label styleClass="pane-type-indicator" text="Backlog" />-->
                    </children>
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="TOP_RIGHT">
                    <children>
                        <SegmentedButton fx:id="segmentedButton">
                            <buttons>
                                <ToggleButton fx:id="detailsToggleButton" text="Details" selected="true"/>
                                <ToggleButton fx:id="visualisationToggleButton" text="Visualisation"/>
                            </buttons>
                        </SegmentedButton>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </HBox>
        <ScrollPane id="ScrollPane" fitToWidth="true" prefViewportHeight="0.0" prefViewportWidth="0.0" style="-fx-background-color: transparent" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox mouseTransparent="false" spacing="10.0">
                    <children>


                        <AnchorPane fx:id="mainAnchorPane">
                            <VBox fx:id="detailsVbox" mouseTransparent="false" spacing="10.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                                <GoatLabelTextField fx:id="descriptionLabel" defaultText="Add a description..."/>
                                <Label text="Product Owner" styleClass="field-label">
                                    <VBox.margin>
                                        <Insets bottom="-8"/>
                                    </VBox.margin>
                                </Label>
                                <GoatLabelTextField fx:id="productOwnerLabel"/>
                                <Label text="Scale" styleClass="field-label">
                                    <VBox.margin>
                                        <Insets bottom="-8"/>
                                    </VBox.margin>
                                </Label>
                                <GoatLabelComboBox fx:id="scaleLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <GridPane xmlns:fx="http://javafx.com/fxml/1" GridPane.columnIndex="0" GridPane.columnSpan="2"
                                          GridPane.rowIndex="5" GridPane.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <TableView fx:id="storyTableView" prefHeight="200" prefWidth="-1">
                                            <columns>
                                                <TableColumn fx:id="shortNameTableColumn" style="-fx-alignment: CENTER;"
                                                             text="Story">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="shortName"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                                <TableColumn fx:id="priorityTableColumn" maxWidth="80" minWidth="80"
                                                             style="-fx-alignment: CENTER;" text="Priority">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="priority"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                            </columns>
                                        </TableView>
                                    </children>
                                </GridPane>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <CheckBox fx:id="highlightCheckBox" mnemonicParsing="false"
                                                  text="Highlight Story States" GridPane.columnSpan="2" GridPane.rowIndex="6"/>
                                        <Hyperlink fx:id="highlightHyperLink" text="What do these colours mean?"
                                                   styleClass="helperlink"/>
                                    </children>
                                </HBox>
                                <!--<Hyperlink onAction="#visualiseDependencies" text="Visualise Dependencies"/>-->
                            </VBox>
                            <AnchorPane fx:id="visualisationVbox" AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="-1.0" AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="-1.0"  visible="false" managed="false">
                                <FlowPane fx:id="visualisationPane"/>
                            </AnchorPane>
                        </AnchorPane>
                        <!-- -->
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
