<?xml version="1.0" encoding="UTF-8"?>

<?import com.thirstygoat.kiqo.gui.nodes.GoatFilteredListSelectionView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="com.thirstygoat.kiqo.gui.formControllers.StoryFormController">
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="55.0" prefWidth="600.0" spacing="10.0"
              style="-fx-background-color: #eee;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel"/>
                <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" text="Create Story"/>
            </children>
            <padding>
                <Insets right="35.0"/>
            </padding>
        </HBox>
    </bottom>
    <center>
        <GridPane vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="183.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="347.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
            <padding>
                <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
            </padding>
            <children>
                <Label text="Name:"/>
                <Label text="Short Name:" GridPane.rowIndex="1"/>
                <Label text="Description:" GridPane.rowIndex="2"/>
                <Label text="Creator:" GridPane.rowIndex="3"/>
                <Label text="Project:" GridPane.rowIndex="4"/>
                <Label text="Priority:" GridPane.rowIndex="5"/>
                <TextField fx:id="longNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <TextField fx:id="shortNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="creatorTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <TextField fx:id="projectTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <TextField fx:id="priorityTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Label text="Estimation Scale:" GridPane.rowIndex="6"/>
                <ComboBox fx:id="estimationScaleComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                          GridPane.rowIndex="6"/>
                <GoatFilteredListSelectionView prefHeight="200" fx:id="storySelectionView" GridPane.columnSpan="2"
                                               GridPane.rowIndex="7"/>
                <Hyperlink fx:id="storyCycleHyperLink" text="Why can't I see all stories?" GridPane.columnIndex="0"
                           GridPane.rowIndex="8">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Hyperlink>
            </children>
        </GridPane>
    </center>
</BorderPane>
