<?xml version="1.0" encoding="UTF-8"?>

<?import com.thirstygoat.kiqo.gui.nodes.GoatFilteredListSelectionView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="200.0" styleClass="form"
            stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="com.thirstygoat.kiqo.gui.formControllers.PersonFormController">
    <center>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="form-field-label" text="Name">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="longNameTextField">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
                <Label styleClass="form-field-label" text="Short Name">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="shortNameTextField">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
                <HBox spacing="10.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="form-field-label" text="User ID">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="userIdTextField">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </TextField>
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="form-field-label" text="Department">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="departmentTextField">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </TextField>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="form-field-label" text="Email">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="emailTextField">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </TextField>
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="form-field-label" text="Phone">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="phoneTextField">
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </TextField>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label styleClass="form-field-label" text="Description">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="descriptionTextField">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
                <Label styleClass="form-field-label" text="Skills">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
                <GoatFilteredListSelectionView prefHeight="200" fx:id="skillsSelectionView"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </padding>
            <children>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" styleClass="form-button"
                        text="Cancel"/>
                <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" styleClass="form-button"
                        text="Create Person"/>
            </children>
        </HBox>
    </bottom>
    <top>
        <Label fx:id="heading" maxWidth="1.7976931348623157E308" styleClass="form-heading" text="Create Person"
               BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
