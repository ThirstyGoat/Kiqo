<?xml version="1.0" encoding="UTF-8"?>

<?import com.thirstygoat.kiqo.gui.nodes.GoatListSelectionView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="-1.0" prefWidth="600.0"
            fx:controller="com.thirstygoat.kiqo.gui.formControllers.ReportFormController">
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="55.0" prefWidth="600.0" spacing="10.0"
              style="-fx-background-color: #eee;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel"/>
                <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" text="Generate Report"/>
            </children>
            <padding>
                <Insets right="35.0"/>
            </padding>
        </HBox>
    </bottom>
    <center>
        <GridPane vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="183.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="347.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
            </padding>
            <children>
                <Label text="Report Level:"/>
                <ComboBox fx:id="levelComboBox" GridPane.columnIndex="1" maxWidth="Infinity"/>
                <GoatListSelectionView fx:id="elementListSelectionView" GridPane.rowIndex="1" GridPane.columnSpan="2"
                                       disable="true"/>
            </children>
        </GridPane>
    </center>
</BorderPane>
